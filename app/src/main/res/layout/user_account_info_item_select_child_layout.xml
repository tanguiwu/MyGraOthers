<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1.0"
    android:background="@drawable/shape_listview_selector"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/user_account_info_item_select_section_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:drawablePadding="10dp"
        android:lines="1"
        android:text="绑定手机号"
        android:textColor="#666666"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:drawablePadding="5dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_account_info_item_select_child_user_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:alpha="1"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ic_launcher">

        </ImageView>

        <TextView
            android:id="@+id/user_account_info_item_select_section_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:gravity="center_vertical|right"
            android:lines="1"
            android:text="13900001111"
            android:textColor="#666666"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>