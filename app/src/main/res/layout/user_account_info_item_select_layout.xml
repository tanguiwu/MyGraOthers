<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1.0"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:background="@drawable/shape_listview_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/user_account_info_item_select_section_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:drawablePadding="10dp"
            android:lines="1"
            android:text="绑定手机号"
            android:textColor="#434d69"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/user_account_info_item_select_section_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:drawablePadding="5dp"
            android:gravity="center_vertical|right"
            android:lines="1"
            android:text="13900001111"
            android:textColor="#8a90a0"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>